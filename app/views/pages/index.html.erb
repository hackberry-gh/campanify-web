<% unless current_user %>
<h1>Hi there,</h1>
<p>Welcome to Campanify, our service is not public for now. Join our newsletter to get updates and be aware of our public launch!</p>
<%= link_to "Sign In", new_user_session_path, :class => "btn btn-primary" %>
<% else %>
<h1>Let's make world more peacefull place</h1>
<%= form_for Campaign.new, 
:remote => true, 
:url => api_campaigns_path,
:html => {
	:class => "form"
} do |f| %>
	<legend>Create your campaign and spread your word now.</legend>	
	<%= f.text_field :name, :placeholder => "Name of Your Campaign" %>
	<%= f.select :plan, Campanify::Plans.all, :include_blank => "Select your plan" %>
  <button type="submit" class="btn btn-primary" style="margin-bottom:9px">Start!</button>
<% end %>
<% end %>