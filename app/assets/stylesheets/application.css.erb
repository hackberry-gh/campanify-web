body{
	margin-top:40px;
	background:#F5F5F5;	
}
.welcome{
	text-align:center;
	background:#F5F5F5;
}
.navbar{
	position: fixed;
	width: 100%;
	left:0;
	top:0;
	font-size:0.9em;
}
.navbar-inner{
	border-radius:0px;
}
#uvTab{
	top:auto !important;
	bottom:4px;
}
.welcome form input[type=email] {
	min-width:246px;
}
.well.form{
	width:75%;
	margin:20px auto;
}
.loading{
	top:50%;
	left:50%;
	position:absolute;
	margin:-8px 0 0 -8px;
}
ul.campaigns{
	list-style:none;
	margin:0;
	padding:0;
}
li.campaign{
	padding:0.5em;
	border:1px solid #FFF;
	border-bottom:1px solid #c8c8c8;
}
li.campaign span{
	display:inline-block;
	margin-right:4px;
}
li.campaign span a{
	padding-left:4px;
}
.popover{
	width:auto;
}
