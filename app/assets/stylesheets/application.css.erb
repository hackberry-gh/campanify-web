.flash{
	margin:0 !important;
}
.campaign_plan_small{
	margin-bottom: 1px;height: 26px;line-height: 26px;
}
label[for=user_remember_me]{
	display:inline-block;
}
select#campaign_plan{
	width:140px;
}

body{
	background:#272727;
	padding:0;
}
.page{
	background:#F5F5F5;
}
.container-fluid{
	text-align:center;
	padding:0;
}
.logo-96{
	background:url('../images/campanify-logo-96.png');
	width:193px;
	height:97px;
	display:inline-block;
}
header{
	padding:12px 0;
}
.page{
	padding-bottom:12px;
}
footer.span12{
	padding:12px 0 !important;
	color:#F5F5F5;
	margin:0 !important;
	width:100% !important;
}
a, a:hover, a:active, a:visited{
	color:#BD2A29;
}


/* Large desktop */
@media (min-width: 1200px) { 
	body{
		padding:0;
	}	
	.container-fluid{
		text-align:center;
		padding:0;
	}
}

/* Portrait tablet to landscape and desktop */
@media (min-width: 768px) and (max-width: 979px) { 
	body{
		padding:0;
	}	
	.container-fluid{
		text-align:center;
		padding:0;
	}
}

/* Landscape phone to portrait tablet */
@media (max-width: 767px) { 
	body{
		padding:0;
	}
	.container-fluid{
		text-align:center;
		padding:0;
	}
}

/* Landscape phones and down */
@media (max-width: 480px) { 
	body{
		font-size:0.8em;
		padding:0;		
	}
	input{
		font-size:12px !important;
	}
}

@media (max-width: 240px) { 
	.container-fluid{
		text-align:center;
		padding:0;
	}
	body{
		font-size:0.6em;
		padding:0;
	}
	input{
		font-size:10px !important;
		padding-left: 2px !important;
		padding-right: 2px !important;
	}
	.email.span2{
		width: 100px;
	}
	h1{
		font-size:26px;
	}
}