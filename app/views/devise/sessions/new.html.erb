<div class="well form">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.email_field :email, :placeholder => "Email" %></div>

  <div><%= f.password_field :password, :placeholder => "Password" %></div>

  <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "remember_me" %> <%= f.submit "Sign in", :class => "btn btn-primary" %></div>

<% end %>

<%= render "devise/shared/links" %>
</div>