<% if alert.present? %>
<div class="alert flash">
  <button type="button" class="close" data-dismiss="alert">×</button>
  <%= alert %>
</div>
<% end %>

<% if notice.present? %>
<div class="alert alert-info flash">
  <button type="button" class="close" data-dismiss="alert">×</button>
  <%= notice %>
</div>
<% end %>