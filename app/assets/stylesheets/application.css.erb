body{
	background:#F5F5F5;	
}
.logo-48{
	width:96px;
	height:48px;
}
.flag-256{
	width:256px;
	height:256px;
}
.navbar .brand{
	position:absolute;
	bottom: -28px;
	z-index:2000;
}
.navbar-fixed-top{
	position:static;
	margin-bottom: 20px;
}
.navbar{
	border-bottom:22px solid #FFA915;
	font-size:0.9em;
}
.navbar-inner{
	border-radius:0px;
}
.navbar .container{
	position:relative;
}
.navbar .current-user{
	position: absolute;
	bottom: -22px;
	right: 12px;
	color: #222;
	font-size: 0.9em;
}

.flash{
	margin-top: -20px;
}

#uvTab{
	top:auto !important;
	bottom:4px;
}

.welcome{
	min-height:256px;
}
.welcome .info{
	text-align: right;
	margin-top:32px;	
}
.welcome .flag{
	text-align: center;
}
.welcome .newsletter{
	text-align: left;
	margin-top:64px;
}

.well.form{
	margin:0 auto;
	width:256px;
}
.well.form.new-campaign{
	width:512px;
}
#error_explanation{
	padding: 8px 35px 8px 14px;
	margin-bottom: 20px;
	color: #C09853;
	text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	background-color: #FCF8E3;
	border: 1px solid #FBEED5;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
}

.loading{
	top:50%;
	left:50%;
	position:absolute;
	margin:-8px 0 0 -8px;
}
ul.campaigns{
	list-style:none;
	margin:0;
	padding:0;
}
li.campaign{
	padding: 0.5em;
	border: 1px solid #C8C8C8;
	border-bottom: 1px solid #F0F0F0;
	background: white;
}
li.campaign span{
	display:inline-block;
	margin-right:4px;
}
li.campaign span a{
	padding-left:4px;
}
.popover{
	width:auto;
}

#footer {
	margin-top: 60px;
  height: 60px;
}

.plans input, .plans select{
	width:100px;
}

.plans ul{
	margin:0;
	list-style:none;
}
.plans .main .span12 li{
	border-bottom:1px solid #fff;
	padding:5px 0;
}

@media (max-width: 979px) { 
	li.campaign span.visit{
		max-width:90px;
		overflow:hidden;
	}
	.well.form.new-campaign {
	width: 100%;
	}
	.navbar-fixed-top .navbar-inner, .navbar-fixed-bottom .navbar-inner {
	padding: 0 5px;
	}
	.navbar .brand{
		bottom: -51px;
	}
	.navbar .container{
		margin-bottom:24px;
	}
	.flag-256{
		width:100%;
		height:auto;
	}
	.well.form{
		width:100%;
		background:none;
		
		min-height: 20px;
		padding: 0;
		margin-bottom: 20px;

		border: none;

		-webkit-box-shadow: none;
		-moz-box-shadow: none;
		box-shadow: none;
	}
}

@media (max-width: 767px) { 
	.features.span4.offset4{
		margin-left:0;
	}
	
	.welcome .info{
		text-align: left;
		margin-top:0;	
	}
	.welcome .flag{
		text-align: center;
	}
	.welcome .newsletter{
		text-align: left;
		margin-top:0;
		padding-bottom:24px;
	}
	.flag-256{
		width:256px;
		height:256px;
		min-width:256px;
		min-height:256px;		
		max-width:256px;
		max-height:256px;		
	}
	#footer {
    margin-left: -20px;
    margin-right: -20px;
    padding-left: 20px;
    padding-right: 20px;
  }
}

@media (max-width: 568px) { 
}

@media (max-width: 320px) { 
	#uvTab{
		display:none !important;
	}	
}